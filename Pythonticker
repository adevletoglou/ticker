#you should install yfinance and time if you haven't already to run this program.

#pip install yfinance

import yfinance as yf
import time


lookfor = input("Enter Ticker")
ticker = yf.Ticker(lookfor)


details = input("What are you looking for? Business Summary(1), Current Bid(2), Current Ask(3), all(4), or other(0)")    


bid = ticker.info['bid']
ask = ticker.info['ask']
currency = ticker.info["currency"]
summary = (ticker.info['longBusinessSummary'])


if details == "1":
    print(ticker.info['longBusinessSummary'])
elif details == "2":
    n=0
    while n<=10:
        ticker = yf.Ticker(lookfor)
        bid = ticker.info['bid']
        print("%s %s"  %(bid,currency))
        n=n+1
        time.sleep(1)
elif details == "3":
    n=0
    while n<=10:
        ticker = yf.Ticker(lookfor)
        ask = ticker.info['ask']
        print("%s %s"  %(ask,currency))
        n=n+1
        time.sleep(1)
elif details == "4":
    print("%s BID = %s %s, ASK = %s %s"  %(summary,bid,currency, ask, currency))
elif details == "0":
    print("Keyword Mode")
    keyword = input("Enter keyword")
    if keyword in ticker.info:
        print(ticker.info[keyword])
    else:
        print("Error Keyword not found")
    

    
#print(ticker.info)

